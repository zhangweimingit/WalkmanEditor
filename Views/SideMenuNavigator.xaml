<UserControl x:Class="DictionaryEditor.Views.SideMenuNavigator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DictionaryEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="150">
    <Grid>
        <hc:SideMenu Grid.Column="0" 
                     Margin="1">
            <hc:SideMenuItem Header="每日英语">
                <hc:SideMenuItem.Icon>
                    <Image Source="{StaticResource Icon_daily_english}" Width="30" Height="30"/>
                </hc:SideMenuItem.Icon>
            </hc:SideMenuItem>

            <hc:SideMenuItem Header="我的词典">
                <hc:SideMenuItem.Icon>
                    <Image Source="{StaticResource Icon_my_dictionary}"  Width="30" Height="30"/>
                </hc:SideMenuItem.Icon>
            </hc:SideMenuItem>
        </hc:SideMenu>
    </Grid>
</UserControl>
