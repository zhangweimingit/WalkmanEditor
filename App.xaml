<Application x:Class="DictionaryEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:DictionaryEditor"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources RequestedTheme="Dark" AccentColor="Orange"/>
                <hc:Theme/>
            </ResourceDictionary.MergedDictionaries>

            <BitmapImage x:Key="Icon_application" UriSource="Resources/Image/Applicaton-Icon-128.png"/>
            <BitmapImage x:Key="Icon_daily_english" UriSource="Resources/Image/Letter-A-Icon-128.png"/>
            <BitmapImage x:Key="Icon_my_dictionary" UriSource="Resources/Image/Letter-B-Icon-128.png"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
